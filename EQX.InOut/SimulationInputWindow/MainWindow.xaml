<Window x:Class="SimulationInputWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulationInputWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow"
        Height="620"
        Width="1250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>
        <DockPanel Margin="0 0 0 10">
            <Button Content="Set To Origin"
                    Command="{Binding SetInputToOrigin}"
                    FontSize="15"
                    Width="150"
                    Cursor="Hand"
                    Margin="5 0 0 0" />
            <Button Content="Set To Start"
                    Command="{Binding SetInputToStart}"
                    FontSize="15"
                    Width="150"
                    Cursor="Hand"
                    Margin="5 0 0 0" />
            <!--<Button Content="Set To AutoRun"
                    Command="{Binding SetInputToAutoRun}"
                    FontSize="15"
                    Width="150"
                    Cursor="Hand"
                    Margin=" 5 0 0 0" />-->
            <Button Content="Off All Inputs"
                    Command="{Binding OffAllInputs}"
                    FontSize="15"
                    Width="150"
                    Cursor="Hand"
                    Margin=" 5 0 0 0" />
            <ComboBox DockPanel.Dock="Right"
                      Width="200"
                      x:Name="cbMachineType"
                      SelectedItem="{Binding SelectedMachineType}">
            </ComboBox>
        </DockPanel>
        <Grid Grid.IsSharedSizeScope="True"
              Grid.Row="1">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding InputList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="6">

                            </UniformGrid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
