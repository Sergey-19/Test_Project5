<Window x:Class="PIFilmFlagSimulationWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIFilmFlagSimulationWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:MainWindowViewModel x:Key="MainWindowViewModel"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/> 
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Virtual process flag simulator"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="16,12" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding FlagGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FFCCCCCC"
                                BorderThickness="1"
                                CornerRadius="6"
                                Margin="12">
                            <StackPanel>
                                <DockPanel Margin="12" LastChildFill="False">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               DockPanel.Dock="Left" />
                                    <StackPanel Orientation="Horizontal"
                                                DockPanel.Dock="Right">
                                        <Button Content="Release inputs"
                                                Margin="0,0,12,0"
                                                Padding="12,4"
                                                Command="{Binding ClearInputsCommand}"
                                                IsEnabled="{Binding HasManualOverrides}"
                                                Visibility="{Binding CanClearInputs, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        <Button Content="Clear outputs"
                                                Padding="12,4"
                                                Command="{Binding ClearOutputsCommand}"
                                                IsEnabled="{Binding HasOutputs}"
                                                Visibility="{Binding CanClearOutputs, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </StackPanel>
                                </DockPanel>
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Inputs"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,6" />
                                        <ItemsControl ItemsSource="{Binding Inputs}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <DockPanel Margin="0,2">
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   VerticalAlignment="Center"
                                                                   DockPanel.Dock="Left">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="FontWeight" Value="Normal" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsManual}" Value="True">
                                                                            <Setter Property="FontWeight" Value="SemiBold" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <CheckBox IsChecked="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                  IsEnabled="{Binding IsEditable}"
                                                                  HorizontalAlignment="Right"
                                                                  Margin="12,0,0,0">
                                                            <CheckBox.Style>
                                                                <Style TargetType="CheckBox">
                                                                    <Setter Property="Foreground" Value="Black" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsManual}" Value="True">
                                                                            <Setter Property="Foreground" Value="#FF0057B8" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </CheckBox.Style>
                                                        </CheckBox>
                                                        <CheckBox IsChecked="{Binding Value}"
                                                                  IsEnabled="False"
                                                                  HorizontalAlignment="Right"
                                                                  Margin="12,0,0,0" />
                                                    </DockPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Outputs"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,6" />
                                        <ItemsControl ItemsSource="{Binding Outputs}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <DockPanel Margin="0,2">
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   VerticalAlignment="Center"
                                                                   DockPanel.Dock="Left" />
                                                        <CheckBox IsChecked="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                  IsEnabled="{Binding IsEditable}"
                                                                  HorizontalAlignment="Right"
                                                                  Margin="12,0,0,0" />
                                                    </DockPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
