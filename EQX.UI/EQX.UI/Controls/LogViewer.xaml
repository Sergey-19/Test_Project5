<UserControl x:Class="EQX.UI.Controls.LogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EQX.UI.Controls"
             xmlns:ui="clr-namespace:EQX.UI"
             xmlns:cvt="clr-namespace:EQX.UI.Converters"
             mc:Ignorable="d"
             FontFamily="Courier New"
             Loaded="UserControl_Loaded"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <cvt:TextToTextForeground x:Key="TextToTextForeground" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EQX.UI;component/Styles/ExpanderCommonStyle.xaml" />
                <ResourceDictionary Source="/EQX.UI;component/Styles/ComboboxCommonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="8.9*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>

        <GroupBox Header="Log Files"
                  FontSize="15"
                  Margin="0 13 0 0"
                  Grid.RowSpan="2">
            <TreeView x:Name="LogTreeView"
                      BorderBrush="White"
                      SelectedItemChanged="LogTreeView_SelectedItemChanged" />
        </GroupBox>

        <UniformGrid Grid.Row="2"
                     Grid.Column="0"
                     HorizontalAlignment="Left">
            <local:ImageButton Content="{DynamicResource str_Refresh}"
                               Image="{StaticResource image_refresh_selected}"
                               Click="Refresh_Click"
                               Margin="2"
                               Height="40"
                               Width="120" />
        </UniformGrid>

        <GroupBox Header="Unit"
                  Grid.Row="0"
                  Grid.Column="1"
                  FontSize="12"
                  FontWeight="Bold"
                  Style="{x:Null}">
            <ComboBox ItemsSource="{Binding Unit}"
                      x:Name="cboUnit"
                      SelectedIndex="0"
                      MaxDropDownHeight="500"
                      SelectionChanged="cboUnit_SelectionChanged" />
        </GroupBox>

        <GroupBox Header="Level"
                  Grid.Row="0"
                  Grid.Column="2"
                  FontSize="12"
                  FontWeight="Bold"
                  Style="{x:Null}">
            <ComboBox x:Name="cboLevel"
                      SelectionChanged="cboLevel_SelectionChanged" />
        </GroupBox>

        <ListBox x:Name="logListBox"
                 Grid.Column="1"
                 Grid.Row="1"
                 Grid.RowSpan="2"
                 Grid.ColumnSpan="4"
                 Margin="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{x:Null}"
                            Height="Auto">
                        <TextBlock Text="{Binding}"
                                   VerticalAlignment="Center"
                                   Height="16"
                                   FontFamily="Courier New"
                                   Foreground="{Binding ., Converter={StaticResource TextToTextForeground}}" />
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
