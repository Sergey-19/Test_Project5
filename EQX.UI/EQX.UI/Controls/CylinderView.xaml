        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border
            Grid.Row="0"
            Height="35"
            BorderThickness="1"
            BorderBrush="{StaticResource PrimaryBorderBrush}"
            Background="{StaticResource HighLightBackgroundColor}">
            <TextBlock
                Margin="3 0"
                FontWeight="Bold"
                VerticalAlignment="Center"
                TextAlignment="Center"
                TextWrapping="Wrap">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}[{0}] {1}">
                        <Binding Path="Id"/>
                        <Binding Path="Name"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Border>

