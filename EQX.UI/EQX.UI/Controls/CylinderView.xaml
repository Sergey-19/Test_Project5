            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border
                Height="8"
                BorderThickness="1"
                BorderBrush="{StaticResource PrimaryBorderBrush}"
                Background="{Binding IsForward, Converter={StaticResource BooleanToOnOffBrushConverter}}">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="Grid.Row" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.AlignUnalignReverse}">
                                <Setter Property="Grid.Row" Value="3"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.ForwardBackwardReverse}">
                                <Setter Property="Grid.Row" Value="3"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.GripUngripReverse}">
                                <Setter Property="Grid.Row" Value="3"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.LockUnlockReverse}">
                                <Setter Property="Grid.Row" Value="3"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.RightLeftReverse}">
                                <Setter Property="Grid.Row" Value="3"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.UpDownReverse}">
                                <Setter Property="Grid.Row" Value="3"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.FlipUnflipReverse}">
                                <Setter Property="Grid.Row" Value="3"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.ClampUnclampReverse}">
                                <Setter Property="Grid.Row" Value="3"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <local:ImageButton
                Height="Auto"
                Grid.Row="1"
                Click="ForwardButton_Click"
                Image="{StaticResource image_up_selected}"
                CornerRadius="0"
                Padding="5"
                d:Content="Forward"
                Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=true}"/>

            <local:ImageButton
                Height="Auto"
                Grid.Row="2"
                Click="BackwardButton_Click"
                Image="{StaticResource image_down_selected}"
                CornerRadius="0"
                Padding="5"
                d:Content="Backward"
                Content="{Binding CylinderType, Converter={StaticResource CylinderTypeToButtonNameConverter}, ConverterParameter=false}"/>

            <Border
                Height="8"
                BorderThickness="1"
                BorderBrush="{StaticResource PrimaryBorderBrush}"
                Background="{Binding IsBackward, Converter={StaticResource BooleanToOnOffBrushConverter}}">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="Grid.Row" Value="3"/>
                        <Style.Triggers>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.AlignUnalignReverse}">
                                <Setter Property="Grid.Row" Value="0"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.ForwardBackwardReverse}">
                                <Setter Property="Grid.Row" Value="0"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.GripUngripReverse}">
                                <Setter Property="Grid.Row" Value="0"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.LockUnlockReverse}">
                                <Setter Property="Grid.Row" Value="0"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.RightLeftReverse}">
                                <Setter Property="Grid.Row" Value="0"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.UpDownReverse}">
                                <Setter Property="Grid.Row" Value="0"/>
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding DataContext.CylinderType, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Value="{x:Static inoutCore:ECylinderType.FlipUnflipReverse}">
