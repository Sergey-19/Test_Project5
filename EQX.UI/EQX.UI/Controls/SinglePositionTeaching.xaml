<UserControl x:Class="EQX.UI.Controls.SinglePositionTeaching"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.UI.Controls"
             mc:Ignorable="d" 
             x:Name="root"
             Height="35" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="LableNullOrNot"
               TargetType="Label">
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                             Value="True">
                    <Setter Property="Content"
                            Value="{Binding DataContext.SingleRecipeDescription.Description}" />
                    <Setter Property="Foreground"
                            Value="Transparent" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Height="{TemplateBinding Height}"
                                    Width="{TemplateBinding Width}">
                                <Grid>
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="{TemplateBinding Padding}"
                                               Text="{TemplateBinding Content}"
                                               TextWrapping="WrapWithOverflow"
                                               TextAlignment="Center" />
                                </Grid>

                                <Border.Style>
                                    <Style TargetType="{x:Type Border}">
                                        <Style.Setters>
                                            <Setter Property="Background"
                                                    Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background}" />

                                            <Setter Property="BorderBrush"
                                                    Value="#d3d5d6" />

                                            <Setter Property="BorderThickness"
                                                    Value="1" />

                                            <Setter Property="CornerRadius"
                                                    Value="0" />
                                        </Style.Setters>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Setter Property="Background"
                        Value="#fafbfc" />

                <Setter Property="Foreground"
                        Value="#24292e" />

                <Setter Property="FontWeight"
                        Value="Bold" />

                <Setter Property="Padding"
                        Value="5" />

                <Setter Property="Cursor"
                        Value="Hand" />
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Foreground"
                            Value="#959DA5" />

                    <Setter Property="Cursor"
                            Value="Arrow" />
                </Trigger>

                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#f3f4f6" />
                </Trigger>
                
                <DataTrigger Binding="{Binding DataContext.IsHeader, ElementName=root}"
                             Value="True">
                    <Setter Property="Visibility"
                            Value="Hidden" />
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.IsHeader, ElementName=root}"
                             Value="False">
                    <Setter Property="Visibility"
                            Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"
                                  SharedSizeGroup="Recipe_Index" />

                <ColumnDefinition Width="3*"
                                  SharedSizeGroup="Recipe_Description" />

                <ColumnDefinition Width="2*"
                                  SharedSizeGroup="Recipe_Axis" />

                <ColumnDefinition Width="0.75*"
                                  SharedSizeGroup="Recipe_Value" />
                
                <ColumnDefinition Width="0.75*"
                                  SharedSizeGroup="Recipe_Move" />

                <ColumnDefinition Width="1.2*"
                                  SharedSizeGroup="Recipe_GetCurrentPosition" />

                <ColumnDefinition Width="0.75*"
                                  SharedSizeGroup="Recipe_Save" />

            </Grid.ColumnDefinitions>

            <!--INDEX-->
            <Border Grid.Column="0"
                    BorderBrush="#333333">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="BorderThickness"
                                        Value="0.5" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="False">
                                <Setter Property="BorderThickness"
                                        Value="0.5 0 0.5 0.5" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="0">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                         Value="True">
                                <Setter Property="Content"
                                        Value="" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                         Value="False">
                                <Setter Property="Content"
                                        Value="{Binding DataContext.SingleRecipeDescription.Index, ElementName=root}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="Content"
                                        Value="{DynamicResource str_Index}" />
                                <Setter Property="FontWeight"
                                        Value="Bold" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>

            <!--DESCRIPTION-->
            <Border Grid.Column="1"
                    Background="{Binding IsOnPosition,Converter={StaticResource BooleanToMarkBackgroundConverter}}"
                    BorderBrush="#333333">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="BorderThickness"
                                        Value="0 0.5 0.5 0.5" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="False">
                                <Setter Property="BorderThickness"
                                        Value="0 0 0.5 0.5" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="1">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                         Value="True">
                                <Setter Property="Content"
                                        Value="{Binding DataContext.SingleRecipeDescription.Description, ElementName=root}" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                         Value="False">
                                <Setter Property="Content"
                                        Value="{Binding DataContext.SingleRecipeDescription.Description, ElementName=root}" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="Content"
                                        Value="{DynamicResource str_Description}" />
                                <Setter Property="FontWeight"
                                        Value="Bold" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>

            <!--Axis-->
            <Border Grid.Column="2"
                    BorderBrush="#333333">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="BorderThickness"
                                        Value="0 0.5 0.5 0.5" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="False">
                                <Setter Property="BorderThickness"
                                        Value="0 0 0.5 0.5" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="2">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                         Value="True">
                                <Setter Property="Content"
                                        Value="" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                         Value="False">
                                <Setter Property="Content"
                                        Value="{Binding DataContext.SinglePosition.Motion, ElementName=root}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="Content"
                                        Value="{DynamicResource str_Motion}" />
                                <Setter Property="FontWeight"
                                        Value="Bold" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>

            <!--VALUE-->
            <StackPanel Grid.Column="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Background="Transparent">
                <Label VerticalAlignment="Center">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                             Value="True">
                                    <Setter Property="Content"
                                            Value="" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                             Value="False">
                                    <Setter Property="Content"
                                            Value="{Binding Value, ElementName=root, Mode=TwoWay, StringFormat={}{0:0.###}}" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                             Value="True">
                                    <Setter Property="Content"
                                            Value="{DynamicResource str_Value}" />

                                    <Setter Property="FontWeight"
                                            Value="Bold" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>

                <Label VerticalAlignment="Center">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                             Value="True">
                                    <Setter Property="Content"
                                            Value="" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                             Value="False">
                                    <Setter Property="Content"
                                            Value="{Binding DataContext.SingleRecipeDescription.Unit, ElementName=root, Mode=TwoWay}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                             Value="True">
                                    <Setter Property="Content"
                                            Value="" />
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
            </StackPanel>
            <Border Grid.Column="3"
                    BorderBrush="#333333"
                    Background="Transparent"
                    MouseUp="Value_MouseUp">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="BorderThickness"
                                        Value="0 0.5 0.5 0.5" />
                                <Setter Property="Cursor"
                                        Value="Arrow" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="False">
                                <Setter Property="BorderThickness"
                                        Value="0 0 0.5 0.5" />
                                <Setter Property="Cursor"
                                        Value="Hand" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding DataContext.IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="Cursor"
                                        Value="Arrow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <!--Move-->
            <Border Grid.Column="4"
                    BorderBrush="#333333">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="BorderThickness"
                                        Value="0 0.5 0.5 0.5" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="False">
                                <Setter Property="BorderThickness"
                                        Value="0 0 0.5 0.5" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Button HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Content="Move"
                        Command="{Binding DataContext.MovePositionTeachingCommand,ElementName=root}"
                        CommandParameter="{Binding DataContext,ElementName=root}"
                        Grid.Column="4">
                </Button>
            </Border>

            <!--Get Current Position-->
            <Border Grid.Column="5"
                    Visibility="{Binding IsTeaching , Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#333333">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="BorderThickness"
                                        Value="0 0.5 0.5 0.5" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="False">
                                <Setter Property="BorderThickness"
                                        Value="0 0 0.5 0.5" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Button HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Content="Get Current Position"
                        Command="{Binding DataContext.GetCurrentPositionCommand,ElementName=root}"
                        CommandParameter="{Binding DataContext,ElementName=root}"
                        Grid.Column="5">
                </Button>

            </Border>

            <!--Save-->
            <Border Grid.Column="6"
                    Visibility="{Binding IsTeaching,Converter={StaticResource BooleanToVisibilityConverter}}"
                    BorderBrush="#333333">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="True">
                                <Setter Property="BorderThickness"
                                        Value="0 0.5 0.5 0.5" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsHeader, ElementName=root}"
                                         Value="False">
                                <Setter Property="BorderThickness"
                                        Value="0 0 0.5 0.5" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Button Content="Save"
                        Command="{Binding DataContext.SaveCommand,ElementName=root}"
                        CommandParameter="{Binding DataContext,ElementName=root}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                </Button>
            </Border>
        </Grid>

        <Grid>
            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding DataContext.SingleRecipeDescription.IsSpacer, ElementName=root}"
                                           Value="True" />
                                <Condition Binding="{Binding IsHeader, ElementName=root}"
                                           Value="False" />
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="Visibility"
                                        Value="Visible" />
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border BorderThickness="1 0.5"
                    Background="LightGray">
            </Border>

            <TextBlock Text="{Binding DataContext.SingleRecipeDescription.Description, ElementName=root}"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="18" />
        </Grid>
    </Grid>
</UserControl>
