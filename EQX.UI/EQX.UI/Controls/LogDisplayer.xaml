<UserControl x:Class="EQX.UI.Controls.LogDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.UI.Controls"
             xmlns:ui="clr-namespace:EQX.UI"
             xmlns:cvt="clr-namespace:EQX.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <cvt:TextToTextForeground x:Key="TextToTextForeground"/>
    </UserControl.Resources>

    <ListBox
        x:Name="logListBox"
        ItemsSource="{Binding Notification, Source={x:Static ui:NotifyAppender.Appender}}"
        >
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border BorderBrush="{x:Null}"
                    Height="Auto">
                    <TextBlock Text="{Binding}"
                           VerticalAlignment="Center"
                           Height="16"
                           FontFamily="Courier New"
                           Foreground="{Binding ., Converter={StaticResource TextToTextForeground}}"/>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
