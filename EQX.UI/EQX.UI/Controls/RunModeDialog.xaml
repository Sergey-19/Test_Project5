<Window x:Class="EQX.UI.Controls.RunModeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EQX.UI.Controls"
        xmlns:cvt="clr-namespace:EQX.UI.Converters"
        xmlns:core="clr-namespace:EQX.Core.Process;assembly=EQX.Core"
        Title="Mode Select Viewer"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        BorderBrush="Black"
        BorderThickness="2"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <cvt:EnumToStringConverter x:Key="EnumToStringConverter"/>
    </Window.Resources>
    <Border Padding="20">
        <Grid>
            <Button Content="EXIT"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="60"
                    Height="30"
                    Command="{Binding CloseCommand}"/>
            <ItemsControl ItemsSource="{Binding Modes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,40,0,0"
                                    HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Converter={StaticResource EnumToStringConverter}}"
                                Width="120"
                                Height="80"
                                Margin="10"
                                Command="{Binding DataContext.SelectModeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>
