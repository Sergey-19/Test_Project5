<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="VerticalAlignment"
                Value="Center" />

        <Setter Property="HorizontalAlignment"
                Value="Stretch" />

        <Setter Property="Margin"
                Value="2" />

        <Setter Property="FontSize"
                Value="14" />

        <Setter Property="FontWeight"
                Value="Bold" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Border CornerRadius="5"
                            Background="White"
                            BorderBrush="{StaticResource PrimaryBorderBrush}"
                            BorderThickness="1"
                            Padding="6"
                            Height="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0"
                                    CornerRadius="3"
                                    Width="14"
                                    Height="14"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1.0"
                                    Background="{TemplateBinding Background}"
                                    Margin="4">
                                <Path Width="11"
                                      Height="11"
                                      SnapsToDevicePixels="False"
                                      Stroke="white"
                                      StrokeThickness="2"
                                      Data="M1,5 L4,9 M4,9 L11,1">
                                    <Path.Style>
                                        <Style TargetType="Path">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsChecked}"
                                                             Value="True">
                                                    <Setter Property="Visibility"
                                                            Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>

                                            <Setter Property="Visibility"
                                                    Value="Hidden" />
                                        </Style>
                                    </Path.Style>
                                </Path>
                            </Border>

                            <TextBlock Grid.Column="1"
                                       Margin="5 0 0 0"
                                       VerticalAlignment="Center"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       Text="{TemplateBinding Content}"
                                       TextWrapping="WrapWithOverflow" />

                            <TextBlock FontSize="12"
                                       FontWeight="Normal"
                                       Margin="5 0 0 0"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{TemplateBinding Tag}"
                                       TextWrapping="WrapWithOverflow">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                                                         Value="{x:Null}">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>

        </Setter>

        <Setter Property="Cursor"
                Value="Hand" />

        <Style.Triggers>
            <Trigger Property="IsChecked"
                     Value="True">
                <Setter Property="Background"
                        Value="#0075ff" />

                <Setter Property="BorderBrush"
                        Value="#0075ff" />
            </Trigger>

            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Foreground"
                        Value="#6d6d6d" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
