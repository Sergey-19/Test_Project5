<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:EQX.UI.Controls">
    <Style TargetType="{x:Type ui:ImageButton}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ui:ImageButton}">
                        <Border BorderThickness="1"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{Binding Height, RelativeSource={RelativeSource AncestorType=Grid}}"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image x:Name="image"
                                    Margin="{TemplateBinding Padding}">
                                    <Image.Style>
                                        <Style TargetType="{x:Type Image}">
                                            <Setter Property="Source" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Image}"/>
                                            <Setter Property="Stretch" Value="UniformToFill"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsEnabled}"
                                                         Value="False">
                                                    <Setter Property="Source" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DisabledImage}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <ContentPresenter Grid.Column="1"
                                              Margin="0 0 3 0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                    <ContentPresenter.Resources>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="TextElement.Foreground" Value="Black"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsEnabled}"
                                                         Value="False">
                                                    <Setter Property="TextElement.Foreground" Value="Gray"/>
                                                </DataTrigger>
                                            </Style.Triggers>

                                        </Style>
                                    </ContentPresenter.Resources>
                                </ContentPresenter>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98"
                                                    ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground"
                Value="Black"/>
            <Setter Property="FontSize"
                Value="16"/>
            <Setter Property="FontWeight"
                Value="Bold"/>
            <Setter Property="FontFamily"
                Value="Consolas"/>
            <Setter Property="Margin"
                Value="0"/>
            <Setter Property="Padding"
                Value="10"/>
            <Setter Property="Cursor"
                Value="Hand"/>
            <Setter Property="RenderTransformOrigin"
                Value="0.5, 0.5"/>
            <Setter Property="Width"
                Value="Auto"/>
            <Setter Property="CornerRadius"
                Value="5"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource PrimaryBorderBrush}" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0 0" EndPoint="0 1"
                                     Opacity="0.8">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="0.8" Color="White" />
                            <GradientStop Offset="1" Color="LightGray" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

