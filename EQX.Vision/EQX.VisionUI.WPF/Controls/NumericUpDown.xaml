<UserControl x:Class="EQX.VisionUI.WPF.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EQX.VisionUI.WPF.Controls"
             mc:Ignorable="d"
             xmlns:validations="clr-namespace:EQX.VisionUI.WPF.Validations"
             d:DesignHeight="50"
             d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="ToolTip">
            <Style.Setters>
                <Setter Property="IsOpen"
                        Value="True" />
                <Setter Property="StaysOpen"
                        Value="True" />
            </Style.Setters>
        </Style>
        <Style TargetType="Button">
            
        </Style>
    </UserControl.Resources>
    <StackPanel Height="{Binding ControlHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Orientation="Horizontal">
        <Label Content="{Binding Description}"
               Width="{Binding LabelDescriptionWidth}" />
        <TextBox x:Name="txtNum"
                 Grid.Column="0"
                 Width="{Binding TextBoxValueWidth}"
                 Height="{Binding ControlHeight,RelativeSource={RelativeSource AncestorType=UserControl}}"
                 HorizontalAlignment="Right"
                 PreviewTextInput="txtNum_PreviewTextInput"
                 VerticalContentAlignment="Center"
                 VerticalAlignment="Center">
            <TextBox.Text>
                <Binding Path="Value"
                         UpdateSourceTrigger="LostFocus"
                         Mode="TwoWay">
                    <Binding.ValidationRules>
                        <validations:NumberUpDownValidationRule AllowDecimal="False" />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <Trigger Property="Validation.HasError"
                                 Value="true">
                            <Setter Property="ToolTip"
                                    Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button x:Name="cmdUp"
                    Content="?"
                    Width="{Binding ButtonWidth}"
                    Click="CmdUp_Click"
                    Grid.Row="0"
                    Padding="0 0 0 2"
                    FontSize="12" />
            <Button x:Name="cmdDown"
                    Content="?"
                    Width="{Binding ButtonWidth}"
                    Click="CmdDown_Click"
                    Grid.Row="1"
                    Padding="0 0 0 2"
                    FontSize="12" />
        </Grid>
    </StackPanel>
</UserControl>
