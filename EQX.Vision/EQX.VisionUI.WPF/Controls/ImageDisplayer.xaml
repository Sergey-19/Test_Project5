<UserControl x:Class="EQX.VisionUI.WPF.Controls.ImageDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.VisionUI.WPF.Controls"
             mc:Ignorable="d" 
             xmlns:controls="clr-namespace:EQX.VisionUI.WPF.Controls"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="scrollImage">
        <Grid>
            <Image Source="{Binding ImageDisplay,Mode=TwoWay,Converter={StaticResource MatToBitmapSourceConverter}}"
                   MouseWheel="Image_MouseWheel"
                   Loaded="imageViewer_Loaded"
                   x:Name="imageViewer">
                <Image.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Save Image As"
                                  Click="SaveImageMenuItemClick" />
                        <MenuItem Header="Fit Image"
                                  Click="FitImageClick"/>
                        <Separator />
                        <MenuItem Header="Show Center Lines"
                                  IsCheckable="True"
                                  IsChecked="{Binding IsShowCenterLines}"/>
                    </ContextMenu>
                </Image.ContextMenu>
            </Image>
            <controls:CenterLines ImageWidth="{Binding ImageDisplay.Width}" 
                                  Visibility="{Binding IsShowCenterLines,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  PixelSize="16.4"/>
        </Grid>
    </ScrollViewer>

</UserControl>
