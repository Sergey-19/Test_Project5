<UserControl x:Class="EQX.VisionUI.WPF.Controls.VisionToolDragModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.VisionUI.WPF.Controls"
             xmlns:cvt="clr-namespace:EQX.UI.Converters;assembly=EQX.UI"
             mc:Ignorable="d"
             xmlns:vision="clr-namespace:EQX.Vision.Algorithms;assembly=EQX.Vision"
             d:DataContext="{d:DesignInstance Type=vision:VisionToolBase}"
             d:DesignHeight="450" Width="200">

    <UserControl.Resources>
        <cvt:AddSpacesToSentenceConverter x:Key="AddSpacesToSentenceConverter"/>
        <Style TargetType="{x:Type Label}"
               BasedOn="{StaticResource {x:Type Label}}">
            <Style.Setters>
                <Setter Property="Foreground"
                        Value="Black"/>
                <Setter Property="FontWeight"
                        Value="Medium"/>
                <Setter Property="FontFamily"
                        Value="Consolas"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    
    <Border BorderBrush="LightGray"
            Cursor="Hand"
            BorderThickness="1"
            Background="Beige"
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect Color="Silver"
                              Opacity="0.8"
                              BlurRadius="10"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Border>
                <Label Content="{Binding Name, Converter={StaticResource AddSpacesToSentenceConverter}}"
                       FontSize="15"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />
            </Border>
            <Separator Grid.Row="1" BorderThickness="0.5" BorderBrush="LightGray"/>
            <Border Grid.Row="2">
                <Grid>
                    <ItemsControl ItemsSource="{Binding Inputs.Keys}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="-7.5 0 0 0"
                                        Orientation="Horizontal">
                                    <Ellipse Width="15"
                                             Height="15"
                                             MouseDown="KeyInputMouseDown"
                                             MouseUp="KeyInputMouseUp"
                                             Tag="{Binding Path=Key, Mode=OneWay}"
                                             Cursor="Hand"
                                             Fill="Green">
                                    </Ellipse>
                                    <Separator Width="10" />
                                    <Label Content="{Binding Path=Key, Mode=OneWay}"
                                           VerticalAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Width="80"
                                           FontSize="12"
                                           Height="35" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl ItemsSource="{Binding Outputs.Keys}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0 0 -7.5 0"
                                            Orientation="Horizontal">
                                    <Label Content="{Binding Path=Key, Mode=OneWay}"
                                           Width="80"
                                           VerticalAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           HorizontalAlignment="Right"
                                           HorizontalContentAlignment="Right"
                                           FontSize="12"
                                           Height="35" />
                                    <Separator Width="10" />
                                    <Ellipse Width="15"
                                             Height="15"
                                             Tag="{Binding Path=Key, Mode=OneWay}"
                                             MouseDown="KeyOutputMouseDown"
                                             MouseUp="KeyOutputMouseUp"
                                             Cursor="Hand"
                                             Fill="Green">
                                    </Ellipse>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Border>

</UserControl>
