<UserControl x:Class="EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews.OutputToolEditParameterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews"
             mc:Ignorable="d" 
             x:Name="root"
             xmlns:controls="clr-namespace:EQX.VisionUI.WPF.Controls"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Width"
                    Value="150" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>
        <Style TargetType="GroupBox">
            
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="{DynamicResource str_Parameters}">
                <StackPanel Orientation="Vertical">
                    <controls:NumericUpDown Value="{Binding DataContext.NumberOfOutput,ElementName=root,Mode=TwoWay}"
                                            Description="Number of Output" />
                    <GroupBox Header="Align Parameter"
                              Visibility="{Binding IsAlignResult,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Vertical">
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[AlignParameter].OffsetX,ElementName=root,Mode=TwoWay}"
                                                    Description="OffsetX"
                                                    ValidationRule="{StaticResource DoubleValidationRule}" />
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[AlignParameter].OffsetY,ElementName=root,Mode=TwoWay}"
                                                    Description="OffsetY"
                                                    ValidationRule="{StaticResource DoubleValidationRule}" />
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[AlignParameter].OffsetTheta,ElementName=root,Mode=TwoWay}"
                                                    Description="Offset Theta"
                                                    ValidationRule="{StaticResource DoubleValidationRule}" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>
        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource str_Output}">
                <controls:ImageDisplayer ImageDisplay="{Binding DataContext.Inputs[ImageMat],ElementName=root}"
                                         Grid.Row="1" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
