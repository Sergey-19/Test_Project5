<UserControl x:Class="EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews.LineDetectionToolEditParameterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews"
             mc:Ignorable="d"
             x:Name="root"
             DataContextChanged="root_DataContextChanged"
             xmlns:controls="clr-namespace:EQX.VisionUI.WPF.Controls"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Width"
                    Value="150" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>
        <Style TargetType="GroupBox"/>
        <Style TargetType="ComboBox">
            <Setter Property="Width"
                    Value="180" />
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border BorderBrush="LightGray"
                BorderThickness="1">
            <Grid>
                <TabControl>
                    <TabItem Header="{DynamicResource str_Parameters}">
                        <StackPanel Orientation="Vertical">
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[ThetaOffset],ElementName=root,Mode=TwoWay}"
                                                    Description="Theta Offset"
                                                    ValidationRule="{StaticResource DoubleValidationRule}"/>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Direction" />
                                <ComboBox x:Name="cbBoxDirection"
                                          Width="150"
                                          SelectedItem="{Binding Parameters[Direction]}">
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="{DynamicResource str_Results}">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Angle" />
                                <TextBox Text="{Binding Outputs[Line].Angle, Mode=OneWay, StringFormat={}{0:0.###}}"
                                         Width="150"
                                         IsReadOnly="True" />
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource str_Input}">
                <Grid Grid.Row="0">
                    <ScrollViewer x:Name="ScrollImage">
                        <Grid>
                            <AdornerDecorator>
                                <Grid>
                                    <Image Source="{Binding DataContext.Inputs[ImageMat],ElementName=root,Converter={StaticResource MatToBitmapSourceConverter}}"
                                           SizeChanged="ImageDisplay_SizeChanged"
                                           MouseWheel="ImageDisplay_MouseWheel"
                                           Loaded="ImageDisplay_Loaded"
                                           x:Name="ImageDisplay">
                                        <Image.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Save Image As"
                                                          Click="SaveImageMenuItemClick" />
                                                <MenuItem Header="Fit Image"
                                                          Click="FitImageClick" />
                                                <Separator />
                                            </ContextMenu>
                                        </Image.ContextMenu>
                                    </Image>
                                </Grid>
                            </AdornerDecorator>
                            <Canvas Height="{Binding ElementName=ImageDisplay, Path=ActualHeight}"
                                    Width="{Binding ElementName=ImageDisplay, Path=ActualWidth}"
                                    Name="AdornerCanvas">
                            </Canvas>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="{DynamicResource str_Output}">
                <controls:ImageDisplayer ImageDisplay="{Binding DataContext.Outputs[ImageMat],ElementName=root}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
