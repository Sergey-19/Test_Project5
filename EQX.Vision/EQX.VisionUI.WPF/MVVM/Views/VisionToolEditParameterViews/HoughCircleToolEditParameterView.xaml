<UserControl x:Class="EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews.HoughCircleToolEditParameterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews"
             mc:Ignorable="d"
             x:Name="root"
             xmlns:visionTools="clr-namespace:EQX.Vision.Algorithms;assembly=EQX.Vision"
             d:DataContext="{d:DesignInstance Type={x:Type visionTools:FindCircleTool}}"
             xmlns:controls="clr-namespace:EQX.VisionUI.WPF.Controls"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="Width"
                        Value="150" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style>
            <Style TargetType="GroupBox" />

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border BorderBrush="LightGray"
                Grid.Column="0"
                BorderThickness="1">
            <Grid>
                <TabControl>
                    <TabItem Header="{DynamicResource str_Parameters}">
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Left">
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[Dp],ElementName=root,Mode=TwoWay}"
                                                    Description="Dp" />
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[Threshold],ElementName=root,Mode=TwoWay}"
                                                    Description="Threshold" />
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[MinDistance],ElementName=root,Mode=TwoWay}"
                                                    Description="Min Distance" />
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[MinRadius],ElementName=root,Mode=TwoWay}"
                                                    Description="MinRadius" />
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[MaxRadius],ElementName=root,Mode=TwoWay}"
                                                    Description="MaxRadius" />
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[Accumulator],ElementName=root,Mode=TwoWay}"
                                                    Description="Accumulator" />
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="{DynamicResource str_Results}">
                        <ItemsControl ItemsSource="{Binding Outputs[Circles]}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Circle.CenterX}"/>
                                        <TextBlock Text="{Binding Circle.CenterY}"/>
                                        <TextBlock Text="{Binding Circle.Radius}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource str_Input}">
                <Grid Grid.Row="0">
                    <ScrollViewer x:Name="ScrollImage">
                        <Grid>
                            <AdornerDecorator>
                                <Image Source="{Binding DataContext.Inputs[ImageMat],ElementName=root,Converter={StaticResource MatToBitmapSourceConverter}}"
                                       SizeChanged="ImageDisplay_SizeChanged"
                                       MouseWheel="ImageDisplay_MouseWheel"
                                       x:Name="ImageDisplay" />
                            </AdornerDecorator>
                            <Canvas Height="{Binding ElementName=ImageDisplay, Path=ActualHeight}"
                                    Width="{Binding ElementName=ImageDisplay, Path=ActualWidth}"
                                    Name="AdornerCanvas" />
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource str_Output}">
                <controls:ImageDisplayer ImageDisplay="{Binding DataContext.Outputs[ImageMat],ElementName=root}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
