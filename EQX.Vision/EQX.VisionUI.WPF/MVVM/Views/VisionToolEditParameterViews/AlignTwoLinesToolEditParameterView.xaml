<UserControl x:Class="EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews.AlignTwoLinesToolEditParameterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews"
             mc:Ignorable="d"
             Name="root"
             xmlns:controls="clr-namespace:EQX.VisionUI.WPF.Controls"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="Width"
                        Value="150" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style>
            <Style TargetType="GroupBox" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border BorderBrush="LightGray"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TabControl>
                    <TabItem Header="{DynamicResource str_Parameters}">
                        <Grid>
                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="dX"
                                               Width="70"
                                               VerticalAlignment="Center" />
                                    <controls:NumericUpDown Value="{Binding DataContext.Parameters[MinOffsetX],ElementName=root,Mode=TwoWay}"
                                                            TextBoxValueWidth="60"
                                                            LabelDescriptionWidth="0"
                                                            ValidationRule="{StaticResource DoubleValidationRule}"/>
                                    <Label Content="~"
                                           Width="20"
                                           HorizontalContentAlignment="Center" />
                                    <controls:NumericUpDown Value="{Binding DataContext.Parameters[MaxOffsetX],ElementName=root,Mode=TwoWay}"
                                                            TextBoxValueWidth="60"
                                                            LabelDescriptionWidth="0"
                                                            ValidationRule="{StaticResource DoubleValidationRule}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="dY"
                                               Width="70"
                                               VerticalAlignment="Center" />
                                    <controls:NumericUpDown Value="{Binding DataContext.Parameters[MinOffsetY],ElementName=root,Mode=TwoWay}"
                                                            TextBoxValueWidth="60"
                                                            LabelDescriptionWidth="0"
                                                            ValidationRule="{StaticResource DoubleValidationRule}"/>
                                    <Label Content="~"
                                           Width="20"
                                           HorizontalContentAlignment="Center" />
                                    <controls:NumericUpDown Value="{Binding DataContext.Parameters[MaxOffsetY],ElementName=root,Mode=TwoWay}"
                                                            TextBoxValueWidth="60"
                                                            LabelDescriptionWidth="0"
                                                            ValidationRule="{StaticResource DoubleValidationRule}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="dT"
                                               Width="70"
                                               VerticalAlignment="Center" />
                                    <controls:NumericUpDown Value="{Binding DataContext.Parameters[MinTheta],ElementName=root,Mode=TwoWay}"
                                                            TextBoxValueWidth="60"
                                                            LabelDescriptionWidth="0"
                                                            ValidationRule="{StaticResource DoubleValidationRule}"/>
                                    <Label Content="~"
                                           Width="20"
                                           HorizontalAlignment="Center" />
                                    <controls:NumericUpDown Value="{Binding DataContext.Parameters[MaxTheta],ElementName=root,Mode=TwoWay}"
                                                            TextBoxValueWidth="60"
                                                            LabelDescriptionWidth="0"
                                                            ValidationRule="{StaticResource DoubleValidationRule}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Header="{DynamicResource str_Results}">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="X" />
                                <TextBox Text="{Binding Outputs[AlignResult].Offset.X, Mode=OneWay, StringFormat={}{0:0.###}}"
                                         Width="150"
                                         IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Y" />
                                <TextBox Text="{Binding Outputs[AlignResult].Offset.Y, Mode=OneWay, StringFormat={}{0:0.###}}"
                                         Width="150"
                                         IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Theta" />
                                <TextBox Text="{Binding Outputs[AlignResult].Offset.Theta, Mode=OneWay, StringFormat={}{0:0.###}}"
                                         Width="150"
                                         IsReadOnly="True" />
                            </StackPanel>
                        </StackPanel>
                    </TabItem>

                </TabControl>
            </Grid>
        </Border>
        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource str_Input}">
                <controls:ImageDisplayer ImageDisplay="{Binding DataContext.Inputs[ImageMat],ElementName=root}" />
            </TabItem>
            <TabItem Header="{DynamicResource str_Output}">
                <controls:ImageDisplayer ImageDisplay="{Binding DataContext.Outputs[ImageMat],ElementName=root}" />
            </TabItem>
        </TabControl>
    </Grid>

</UserControl>
