<UserControl x:Class="EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews.GrabToolEditParameterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews"
             mc:Ignorable="d"
             Name="root"
             xmlns:controls="clr-namespace:EQX.VisionUI.WPF.Controls"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Width"
                    Value="180" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border BorderBrush="LightGray"
                BorderThickness="1">
            <Grid>
                <TabControl>
                    <TabItem Header="{DynamicResource str_Parameters}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="9*" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="Database"
                                             IsChecked="{Binding Parameters[IsUseDataBase]}" />
                                <RadioButton Content="Camera"
                                             IsChecked="{Binding Parameters[IsUseCamera]}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Grid.Row="1"
                                        Visibility="{Binding Parameters[IsUseDataBase],Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Image Path"
                                           Width="100" />
                                    <TextBox Text="{Binding Parameters[ImagePath]}"
                                             Width="300"
                                             FontSize="11.5" />
                                    <Button Content="Load Image"
                                            Width="80"
                                            Margin="5 0 0 0"
                                            Click="LoadImageButton_Click"
                                            HorizontalContentAlignment="Center" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Read Mode"
                                           Width="100" />
                                    <ComboBox x:Name="cbReadModes"
                                              Width="300"
                                              SelectedItem="{Binding Parameters[ReadMode],Mode=TwoWay}">
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Left"
                                        Grid.Row="1"
                                        Visibility="{Binding Parameters[IsUseCamera],Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Camera Name"
                                           Width="100" />
                                    <Label  Width="300"
                                            Content="{Binding Camera.Name}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Height="30"
                                            Margin="100 10 0 0">
                                    <Button Content="Grab"
                                            Width="100"
                                            Margin="0 0 5 0"
                                            Click="GrabButton_Click" />
                                    <Button Content="LiveOn"
                                            Width="100"
                                            Margin="0 0 5 0"
                                            Click="LiveOnButton_Click" />
                                    <Button Content="Stop"
                                            Width="100"
                                            Click="StopButton_Click" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
        <TabControl Grid.Row="1">
            <TabItem Header="Output">
                <controls:ImageDisplayer ImageDisplay="{Binding DataContext.Outputs[ImageMat],ElementName=root}" />
            </TabItem>
        </TabControl>
    </Grid>

</UserControl>
