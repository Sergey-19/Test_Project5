<UserControl x:Class="EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews.AdaptiveThresholdToolEditParameterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.VisionUI.WPF.MVVM.Views.VisionToolEditParameterViews"
             mc:Ignorable="d" 
             x:Name="root"
             xmlns:controls="clr-namespace:EQX.VisionUI.WPF.Controls"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Width"
                    Value="150" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>
        <Style TargetType="GroupBox"/>
        <Style TargetType="ComboBox">
            <Setter Property="Width"
                    Value="180"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border BorderBrush="LightGray"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TabControl>
                    <TabItem Header="{DynamicResource str_Parameters}">
                        <Grid>
                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Left">
                                <controls:NumericUpDown Value="{Binding DataContext.Parameters[MaxValue],ElementName=root,Mode=TwoWay}"
                                                        Description="Max Value" />
                                <controls:NumericUpDown Value="{Binding DataContext.Parameters[BlockSize],ElementName=root,Mode=TwoWay}"
                                                        Description="Block Size" />
                                <controls:NumericUpDown Value="{Binding DataContext.Parameters[Constant],ElementName=root,Mode=TwoWay}"
                                                        Description="Constant"
                                                        ValidationRule="{StaticResource DoubleValidationRule}"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="AdaptiveThresholdType" />
                                    <ComboBox x:Name="cbAdaptiveThresholdTypes"
                                              Width="150"
                                              SelectedItem="{Binding Parameters[AdaptiveThresholdType]}">
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="ThresholdType" />
                                    <ComboBox x:Name="cbThresholdTypes"
                                              Width="150"
                                              SelectedItem="{Binding Parameters[ThresholdType]}">
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource str_Input}">
                <controls:ImageDisplayer ImageDisplay="{Binding DataContext.Inputs[ImageMat], ElementName=root}" />
            </TabItem>
            <TabItem Header="{DynamicResource str_Output}">
                <controls:ImageDisplayer ImageDisplay="{Binding DataContext.Outputs[ImageMat], ElementName=root}" />
            </TabItem>
        </TabControl>
    </Grid>

</UserControl>
