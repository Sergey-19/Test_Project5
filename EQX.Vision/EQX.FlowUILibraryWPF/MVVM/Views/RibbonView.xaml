<UserControl x:Class="EQX.FlowUILibraryWPF.MVVM.Views.RibbonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.FlowUILibraryWPF.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New"
                              Command="{Binding AddNewFlowCommand}" />
                    <MenuItem Header="_Open"
                              Command="{Binding OpenFlowCommand}" />
                    <MenuItem Header="_Save"
                              Command="{Binding SaveFlowCommand}" />

                    <!--<Separator/>-->
                    <MenuItem Header="_SaveAs"
                              Command="{Binding SaveAsFlowCommand}" />
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="Copy" />
                    <MenuItem Header="Paste" />
                </MenuItem>
            </Menu>
            <TextBlock />
        </DockPanel>
    </Grid>
</UserControl>
