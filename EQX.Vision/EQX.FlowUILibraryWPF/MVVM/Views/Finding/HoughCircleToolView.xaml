<UserControl x:Class="EQX.FlowUILibraryWPF.MVVM.Views.HoughCircleToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.FlowUILibraryWPF.MVVM.Views"
             mc:Ignorable="d" 
             x:Name="root"
             xmlns:resizableControls="clr-namespace:EQX.FlowUILibraryWPF.ResizableControls"
             xmlns:controls="clr-namespace:EQX.FlowUILibraryWPF.Controls"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Width"
                    Value="150" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>
        <Style TargetType="controls:NumericUpDown">
            <Setter Property="ControlWidth" Value="240"/>
            <Setter Property="ControlHeight" Value="30"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="LightGray"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TabControl>
                    <TabItem Header="Parameters">
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Left">
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[Dp],ElementName=root,Converter={StaticResource ObjectToDecimalConverter},Mode=TwoWay}"
                                                    Description="Dp"/>
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[Threshold],ElementName=root,Converter={StaticResource ObjectToDecimalConverter},Mode=TwoWay}"
                                                    Description="Threshold"/>
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[Accumulator],ElementName=root,Converter={StaticResource ObjectToDecimalConverter},Mode=TwoWay}"
                                                    Description="Accumulator"/>
                            <controls:NumericUpDown Value="{Binding DataContext.Parameters[RadiusThreshold],ElementName=root,Converter={StaticResource ObjectToDecimalConverter},Mode=TwoWay}"
                                                    Description="Radius Threshold"/>
                            <GroupBox>
                                <GroupBox.Header>
                                    <TextBlock Text="Circle" FontWeight="Bold"/>
                                </GroupBox.Header>
                                <StackPanel Orientation="Vertical" x:Name="parent"
                                            DataContext="{Binding ExpectedCircle}">
                                    <controls:NumericUpDown Value="{Binding DataContext.CenterX,ElementName=parent,Mode=TwoWay}"
                                                            Description="CenterX"/>
                                    <controls:NumericUpDown Value="{Binding DataContext.CenterY,ElementName=parent,Mode=TwoWay}"
                                                            Description="CenterY"/>
                                    <controls:NumericUpDown Value="{Binding DataContext.Radius,ElementName=parent,Mode=TwoWay}"
                                                            Description="Radius"/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox >
                                <GroupBox.Header>
                                    <TextBlock Text="ROI"
                                               FontWeight="Bold"/>
                                </GroupBox.Header>
                                <StackPanel Orientation="Vertical" x:Name="parent1"
                                            DataContext="{Binding ROI}">
                                    <controls:NumericUpDown Value="{Binding DataContext.X,ElementName=parent1,Mode=TwoWay}"
                                                            Description="X"/>
                                    <controls:NumericUpDown Value="{Binding DataContext.Y,ElementName=parent1,Mode=TwoWay}"
                                                            Description="Y"/>
                                    <controls:NumericUpDown Value="{Binding DataContext.Width,ElementName=parent1,Mode=TwoWay}"
                                                            Description="Width"/>
                                    <controls:NumericUpDown Value="{Binding DataContext.Height,ElementName=parent1,Mode=TwoWay}"
                                                            Description="Height"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Results">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Radius" />
                                <TextBox Text="{Binding Outputs[Radius],Mode=OneWay}"
                                     Width="150"
                                     IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Center" />
                                <TextBox Text="{Binding Outputs[Center],Mode=OneWay}"
                                     Width="150"
                                     IsReadOnly="True" />
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <Label Content="{Binding Cost}"
                       Grid.Row="1"
                       HorizontalAlignment="Left"/>
            </Grid>
        </Border>
        <TabControl Grid.Column="1">
            <TabItem Header="Input">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="9*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <ScrollViewer>
                            <Grid>
                                <Image Source="{Binding DataContext.Inputs[ImageMat],ElementName=root,Converter={StaticResource MatToBitmapSourceConverter}}"
                                       Name="ImageDisplay"
                                       MouseMove="ImageDisplay_MouseMove"
                                       MouseWheel="ImageDisplay_MouseWheel"
                                       SizeChanged="ImageDisplay_SizeChanged"
                                       Loaded="ImageDisplay_Loaded"/>
                                <Canvas Width="{Binding ElementName=ImageDisplay, Path=ActualWidth}"
                                        Height="{Binding ElementName=ImageDisplay, Path=ActualHeight}">
                                    <Thumb DragDelta="Thumb_DragDelta_Circle"
                                               DataContext="{Binding ExpectedCircle}"
                                               Canvas.Left="{Binding Left}"
                                               Canvas.Top="{Binding Top}">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <resizableControls:ResizableCircleControl ToolTip="Circle"
                                                                                          ToolTipService.InitialShowDelay="10"
                                                                                          ToolTipService.Placement="Top"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                    <Thumb DragDelta="Thumb_DragDelta_Rectangle"
                                               DataContext="{Binding ROI}"
                                               Canvas.Left="{Binding XUI}"
                                               Canvas.Top="{Binding YUI}">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <resizableControls:ResizableRectangleControl BorderBrush="Green"
                                                                                             ToolTip="ROI"
                                                                                             ToolTipService.InitialShowDelay="10"
                                                                                             ToolTipService.Placement="Top"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Canvas>
                            </Grid>

                        </ScrollViewer>
                    </Grid>
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal">
                        <Label Content="X : "
                               Width="30" />
                        <Label Name="lblX"
                               Width="50" />
                        <Label Content=" || "
                               Width="20" />
                        <Label Content="Y : "
                               Width="30" />
                        <Label Name="lblY"
                               Width="50" />
                        <Label Content=" || "
                               Width="20" />
                        <Label Content="Color Value : "
                               Width="100" />
                        <Label Name="lblColorValue"
                               Width="50" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Output">
                <controls:ImageDisplayer ImageDisplay="{Binding DataContext.Outputs[ImageMat],ElementName=root}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>

