<UserControl x:Class="EQX.FlowUILibraryWPF.MVVM.Views.MainFlowToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EQX.FlowUILibraryWPF.MVVM.Views"
             mc:Ignorable="d"
             x:Name="root"
             xmlns:vm="clr-namespace:EQX.FlowUILibraryWPF.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type vm:MainFlowToolViewModel}}"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <!--Define Column-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Define Row-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Ribbon-->
        <Grid Grid.ColumnSpan="2"
              Grid.Row="0">
            <ContentControl Content="{Binding RibbonVM}" />
        </Grid>

        <!--Tool list-->
        <Grid Grid.Column="0"
              Grid.Row="1">
            <Border BorderBrush="Black"
                    BorderThickness="1">
                <ContentControl Content="{Binding ToolListVM}" />
            </Border>
        </Grid>

        <!--Flow-->
        <Grid Grid.Column="1"
              Grid.Row="1">
            <!--Define Row-->
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Row="1">
                <TabControl ItemsSource="{Binding FlowList}"
                            SelectedItem="{Binding CurrentFlow}"
                            x:Name="_myTreeView">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FlowName}">
                                <TextBlock.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Delete"
                                                  Command="{Binding DataContext.DeleteFlowCommand, Source={x:Reference _myTreeView}}"
                                                  CommandParameter="{Binding}"/>
                                        <MenuItem Header="Rename"
                                                  Command="{Binding DataContext.RenameFlowCommand, Source={x:Reference _myTreeView}}" 
                                                  CommandParameter="{Binding}"/>
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <ContentControl  Content="{Binding}" />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</UserControl>
