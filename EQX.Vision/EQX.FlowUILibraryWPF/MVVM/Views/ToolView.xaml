<UserControl x:Class="EQX.FlowUILibraryWPF.MVVM.Views.ToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.FlowUILibraryWPF.MVVM.Views"
             mc:Ignorable="d" 
             x:Name="root"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:vm="clr-namespace:EQX.FlowUILibraryWPF.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type vm:ToolViewModel}}"
             Width="200"
             d:DesignHeight="100">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Delete"
                  Command="{Binding DeleteToolCommand}"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Border BorderBrush="LightGray"
        Cursor="Hand"
        BorderThickness="1"
        Background="Beige"
        CornerRadius="8">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseMove">
                <i:InvokeCommandAction Command="{Binding DataContext.OnToolMouseMoveCommand,ElementName=root}"
                                       PassEventArgsToCommand="True" />
            </i:EventTrigger>
            <i:EventTrigger EventName="MouseDown">
                <i:InvokeCommandAction Command="{Binding DataContext.OnToolMouseDownCommand,ElementName=root}"
                                       PassEventArgsToCommand="True" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="5"/>
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>
            <Border >
                <Label Content="{Binding ToolName}"
                   FontSize="15"
                   HorizontalAlignment="Center" />
            </Border>
            <Separator Grid.Row="1" BorderThickness="0.5" BorderBrush="LightGray"/>
            <Border Grid.Row="2">
                <Grid>
                    <ItemsControl ItemsSource="{Binding VisionTool.Inputs.Keys}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="-7.5 0 0 0"
                                        Orientation="Horizontal">
                                    <Ellipse Width="15"
                                         Height="15"
                                         Tag="{Binding Mode=OneWay}"
                                         Cursor="Hand"
                                         Fill="Green">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction Command="{Binding DataContext.PointInputMouseLeftButtonDownCommand,ElementName=root}"
                                                                   PassEventArgsToCommand="True"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding DataContext.PointInputMouseMoveCommand,ElementName=root}"
                                                                   PassEventArgsToCommand="True" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Ellipse>
                                    <Separator Width="10" />
                                    <Label Content="{Binding Mode=OneWay}"
                                       VerticalAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       Width="80"
                                       FontSize="12"
                                       Height="35" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl ItemsSource="{Binding VisionTool.Outputs.Keys}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0 0 -7.5 0"
                                        Orientation="Horizontal">
                                    <Label Content="{Binding Mode=OneWay}"
                                       Width="80"
                                       VerticalAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       HorizontalAlignment="Right"
                                       HorizontalContentAlignment="Right"
                                       FontSize="12"
                                       Height="35" />
                                    <Separator Width="10" />
                                    <Ellipse Width="15"
                                         Height="15"
                                         Tag="{Binding Mode=OneWay}"
                                         Cursor="Hand"
                                         Fill="Green">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction Command="{Binding DataContext.PointOutputMouseLeftButtonDownCommand,ElementName=root}"
                                                                   PassEventArgsToCommand="True"/>
                                            </i:EventTrigger>

                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding DataContext.PointOutputMouseMoveCommand,ElementName=root}"
                                                                   PassEventArgsToCommand="True" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Ellipse>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
