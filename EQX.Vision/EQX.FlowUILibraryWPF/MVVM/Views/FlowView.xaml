<UserControl x:Class="EQX.FlowUILibraryWPF.MVVM.Views.FlowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.FlowUILibraryWPF.MVVM.Views"
             mc:Ignorable="d" 
             x:Name="root"
             xmlns:flowUIWPFViews="clr-namespace:EQX.FlowUILibraryWPF.MVVM.Views"
             xmlns:flowUIWPFViewModels="clr-namespace:EQX.FlowUILibraryWPF.MVVM.ViewModels"
             xmlns:flowUIWPFModels="clr-namespace:EQX.FlowUILibraryWPF.Models"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DataContext="{d:DesignInstance Type={x:Type flowUIWPFViewModels:FlowViewModel}}"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <!--Tool Bar-->
        <Border BorderBrush="Silver"
                BorderThickness="1"
                Margin="2">
            <StackPanel Orientation="Horizontal">
                <Button Content="Run"
                        Width="50"
                        Command="{Binding RunFlowCommand}"/>
                <TextBlock Text="{Binding ExecuteTime}"
                           VerticalAlignment="Center"
                           Margin="10 0 0 0"/>
            </StackPanel>
        </Border>

        <!--Tools and ConnectionPaths-->
        <Border Grid.Row="1"
                BorderBrush="Silver"
                BorderThickness="1"
                Background="Transparent"
                Margin="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <i:InvokeCommandAction Command="{Binding DataContext.OnFlowMouseDownCommand,ElementName=root}"
                                           PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid>
                <!--Tools-->
                <ItemsControl ItemsSource="{Binding ToolList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Background="Transparent">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseMove">
                                        <i:InvokeCommandAction Command="{Binding DataContext.OnFlowMouseMoveCommand,ElementName=root}"
                                                               PassEventArgsToCommand="True" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Canvas>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Canvas>
                                <Thumb Canvas.Left="{Binding Position.Left}"
												   Canvas.Top="{Binding Position.Top}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="DragDelta">
                                            <i:InvokeCommandAction Command="{Binding DataContext.DragDeltaCommand,ElementName=root}"
                                                                   PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <flowUIWPFViews:ToolView>
                                            </flowUIWPFViews:ToolView>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Canvas>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--Paths-->
                <ItemsControl ItemsSource="{Binding ConnectionPathList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas>
                            </Canvas>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <flowUIWPFViews:ConnectionPathView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <flowUIWPFViews:ConnectionPathView DataContext="{Binding TemporaryConnectionPath}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
