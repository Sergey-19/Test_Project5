<Window x:Class="EQX.FlowUILibraryWPF.MVVM.Views.ToolSettingWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EQX.FlowUILibraryWPF.MVVM.Views"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:EQX.FlowUILibraryWPF.MVVM.ViewModels"
        d:DataContext="{d:DesignInstance Type={x:Type vm:ToolSettingWindowViewModel}}"
        Title="{Binding VisionTool.Name}" Height="620" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <Button Content="Run"
                    Command="{Binding RunCommand}"/>
        </StackPanel>
        <Border BorderBrush="LightGray"
				BorderThickness="1">
            <StackPanel Orientation="Horizontal">
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
            <ContentControl Content="{Binding VisionTool}"/>
        </Grid>
    </Grid>
</Window>
