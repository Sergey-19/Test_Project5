<UserControl x:Class="EQX.FlowUILibraryWPF.ResizableControls.ResizableRectangleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.FlowUILibraryWPF.ResizableControls"
             mc:Ignorable="d"
             x:Name="root"
             Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal"
                MouseMove="StackPanel_MouseMove"
                MouseLeftButtonUp="StackPanel_MouseLeftButtonUp">
        <Rectangle Width="{Binding WidthUI}"
                   Height="{Binding HeightUI}"
                   Stroke="{Binding ElementName=root,Path=BorderBrush}"
                   StrokeThickness="2"
                   Cursor="SizeAll">
        </Rectangle>
        <Ellipse Width="10"
                 Height="10"
                 Fill="Green"
                 MouseLeftButtonDown="RightBottomCornerPoint_MouseLeftButtonDown"
                 x:Name="RightBottomCornerPoint"
                 Cursor="SizeNWSE" />
        <Ellipse Width="10"
                 Height="10"
                 Fill="Green"
                 MouseLeftButtonDown="CenterEdgeBottomPoint_MouseLeftButtonDown"
                 x:Name="CenterEdgeBottomPoint"
                 Cursor="SizeNS" />
        <Ellipse Width="10"
                 Height="10"
                 Fill="Green"
                 MouseLeftButtonDown="CenterEdgeRightPoint_MouseLeftButtonDown"
                 x:Name="CenterEdgeRightPoint"
                 Cursor="SizeWE" />
    </StackPanel>
</UserControl>
