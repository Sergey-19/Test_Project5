<UserControl x:Class="EQX.FlowUILibraryWPF.ResizableControls.ResizableCircleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EQX.FlowUILibraryWPF.ResizableControls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal"
                MouseMove="PanelPointMoved"
                MouseLeftButtonUp="PanelPointReleased">
        <Ellipse Width="{Binding DiameterUI}"
                 Stroke="Red"
                 Name="_circle"
                 StrokeThickness="1"
                 Height="{Binding DiameterUI}"
                 Cursor="SizeAll" />
        <Ellipse Width="10"
                 Height="10"
                 Fill="Yellow"
                 Margin="-5 0 0 0"
                 Stroke="LightGray"
                 Cursor="SizeWE"
                 MouseLeftButtonDown="ResizePointPressed"
                 StrokeThickness="1" />
    </StackPanel>
</UserControl>
