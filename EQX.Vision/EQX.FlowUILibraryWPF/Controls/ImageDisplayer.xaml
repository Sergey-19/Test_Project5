<UserControl x:Class="EQX.FlowUILibraryWPF.Controls.ImageDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EQX.FlowUILibraryWPF.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ScrollViewer>
            <Grid>
                <Image Source="{Binding ImageDisplay,Mode=TwoWay,Converter={StaticResource MatToBitmapSourceConverter}}"
                       MouseMove="Image_MouseMove"
                       MouseWheel="Image_MouseWheel">
                    <Image.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Save Image As"
                                      Click="SaveImageMenuItemClick" />
                        </ContextMenu>
                    </Image.ContextMenu>
                </Image>
            </Grid>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1">
            <Label Content="X : "
                   Width="30" />
            <Label x:Name="lblX"
                   Width="50" />
            <Label Content="||"
                   Width="20" />

            <Label Content="Y : "
                   Width="30" />
            <Label x:Name="lblY"
                   Width="50" />
            <Label Content="||"
                   Width="20" />

            <Label Content="Color Value : "
                   Width="70" />
            <Label x:Name="lblColorValue"
                   Width="50" />
        </StackPanel>
    </Grid>
</UserControl>
